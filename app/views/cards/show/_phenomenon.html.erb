<div class="col-xs-12 col-sm-9">
  <div class="row">
    <div class="card-attribute-label col-xs-12 col-sm-2">
      Type:
    </div>
    <div class="card-attribute card-type col-xs-12 col-sm-10">
      <%= card_presenter.card_type %>
    </div>
  </div>
  <div class="row">
    <div class="card-attribute-label col-xs-12 col-sm-2">
      Card Text:
    </div>
    <div class="card-attribute card-text col-xs-12 col-sm-10">
      <%= card_presenter.card_text(:size => 'small') %>
    </div>
  </div>
  <div class="row">
    <div class="card-attribute-label col-xs-12 col-sm-2">
      Flavor Text:
    </div>
    <div class="card-attribute flavor-text col-xs-12 col-sm-10">
      <%= card_presenter.flavor_text %>
    </div>
  </div>
  <div class="row">
    <div class="card-attribute-label col-xs-12 col-sm-2">
      Rarity:
    </div>
    <div class="card-attribute rarity col-xs-12 col-sm-10">
      <%= card_presenter.rarity %>
    </div>
  </div>
  <% if @card.card_set.show_card_numbers %>
    <div class="row">
      <div class="card-attribute-label col-xs-12 col-sm-2">
        Card Number:
      </div>
      <div class="card-attribute card-number col-xs-12 col-sm-10">
        <%= card_presenter.card_number %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="card-attribute-label col-xs-12 col-sm-2">
      Artist:
    </div>
    <div class="card-attribute artist col-xs-12 col-sm-10">
      <%= card_presenter.artist %>
    </div>
  </div>
</div>
