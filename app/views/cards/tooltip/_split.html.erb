<% present card do |card_presenter| %>
  <div class="card-tooltip split">
    <div class="card-name">
      <%= card_presenter.name %>
    </div>
    <% card.card_parts.each do |card_part| %>
      <% present card_part, CardPresenter do |card_part_presenter| %>
        <div class="card-part">
          <div class="card-name">
            <%= card_part_presenter.name %>
          </div>
          <div class="mana-cost">
            <%= card_part_presenter.mana_cost(:size => 'small') %>
          </div>
          <div class="card-type">
            <%= card_part.card_type %>
          </div>
          <div class="card-text">
            <%= card_part_presenter.card_text(:size => 'small') %>
          </div>
          <div class="flavor-text">
            <%= card_part_presenter.flavor_text %>
          </div>
          <div class="artist">
            Artist: <%= card_part_presenter.artist %>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if card.card_set.show_card_numbers %>
      <div class="card-number">
        <%= card_presenter.card_number %>
      </div>
    <% end %>
  </div>
<% end %>
