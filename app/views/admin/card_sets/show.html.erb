<div id="card-set">
  <h1><%= t('card_sets.show.title') %> <small><%= @card_set.name %></small></h1>
  <table class="table table-condensed table-striped">
    <tbody>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.card_set.name') %></th>
        <td><%= @card_set.name %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.card_set.card_block_id') %></th>
        <td><%= link_to @card_set.card_block.name, admin_card_block_path(@card_set.card_block) %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.card_set.release_date') %></th>
        <td><%= @card_set.release_date.strftime('%Y-%m-%d') %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.card_set.prerelease_date') %></th>
        <td><%= @card_set.prerelease_date.strftime('%Y-%m-%d') %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.card_set.show_card_numbers') %></th>
        <td><%= @card_set.show_card_numbers? ? t('yes') : t('no') %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.card_set.created_at') %></th>
        <td><%= @card_set.created_at.present? ? @card_set.created_at.strftime('%Y-%m-%d %H:%M:%S') : '-' %></td>
      </tr>
      <tr>
        <th class="span3"><%= t('activerecord.attributes.card_set.updated_at') %></th>
        <td><%= @card_set.updated_at.present? ? @card_set.updated_at.strftime('%Y-%m-%d %H:%M:%S') : '-' %></td>
      </tr>
    </tbody>
  </table>
  <div class="form-actions">
    <%= link_to t('card_sets.links.back_to_index'), admin_card_sets_path, :class => 'btn' %>
    <% if can? :edit, CardSet, current_user %><%= link_to t('card_sets.edit.title'), edit_admin_card_set_path(@card_set), :class => 'btn' %><% end %>
    <% if can? :destroy, CardSet, current_user %><%= link_to t('card_sets.delete.title'), admin_card_set_path(@card_set), :method => 'delete', :class => 'btn btn-danger', :data => { :confirm => t('confirm_delete') } %><% end %>
  </div>
</div>
