- content_for :page_title, t('.title')
.page-admin-index.page
  %header.page-header
    %h1= t('.title')
  .page-body
    %section.rails-info
      %h2= t('.section.rails_info.title')
      = Rails::Info.to_html.html_safe
    %section.gems
      %h2= t('.section.gems.title')
      %ul
        - gem_dependencies.each do |gem|
          %li
            = "#{gem[:name]} (#{gem[:version]})"
            - if gem[:dependencies].present?
              %ul
                - gem[:dependencies].each do |dependency|
                  %li
                    = "#{dependency[:name]} (#{dependency[:requirement]})"
    %section.nodejs-info
      %h2= t('.section.nodejs_info.title')
      %table
        %tbody
          %tr
            %td.name= t('.section.nodejs_info.labels.nodejs_version')
            %td.value= node_version
          %tr
            %td.name= t('.section.nodejs_info.labels.yarn_version')
            %td.value= yarn_version
