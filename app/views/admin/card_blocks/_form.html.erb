<% present @card_block do |card_block_presenter| %>
  <h1><%= card_block_presenter.form_title %></h1>
  <%= simple_form_for [:admin, @card_block], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :name %>
    <%= f.association :card_block_type, :include_blank => false %>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= link_to t('card_blocks.links.back_to_index'), admin_card_blocks_path, :class => 'btn btn-default' %>
        <%= f.button :submit, 'Submit', :class => 'btn btn-primary' %>
        <% unless @card_block.persisted? %>
          <label for="redirect_to_new">
            <%= check_box_tag 'redirect_to_new', 1, true %> <%= t('helpers.submit.card_block.redirect_to_new') %>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
