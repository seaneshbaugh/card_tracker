<% present @user do |user_presenter| %>
  <h1><%= user_presenter.form_title %></h1>
  <%= simple_form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, :as => :select, :collection => Ability.valid_roles(current_user).map { |_, value| [value.titleize, value] } %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :receive_newsletters, :wrapper => :bootstrap3_horizontal_checkbox %>
    <%= f.input :receive_sign_up_alerts, :wrapper => :bootstrap3_horizontal_checkbox %>
    <%= f.input :receive_contact_alerts, :wrapper => :bootstrap3_horizontal_checkbox %>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= link_to t('users.links.back_to_index'), admin_users_path, :class => 'btn btn-default' %>
        <%= f.button :submit, 'Submit', :class => 'btn btn-primary' %>
        <% unless @user.persisted? %>
          <label for="redirect_to_new">
            <%= check_box_tag 'redirect_to_new', 1, true %> <%= t('helpers.submit.user.redirect_to_new') %>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
