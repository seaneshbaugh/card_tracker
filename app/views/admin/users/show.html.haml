= content_for :page_title, t('.title', username: @user.username)
= content_for :body_class, 'admin-show-user'
- present @user do |user_presenter|
  .page-user.admin-page.page
    %header.page-header
      %h1= t('.title', username: @user.username)
    .page-body
      .row
        .admin-actions.col.s12
          = link_to t('.back_to_users'), admin_users_path, class: info_button_class
          - if policy([:admin, @user]).edit?
            = edit_icon_link(edit_admin_user_path(@user), label: t('edit'))
          - if policy([:admin, @user]).destroy?
            = delete_icon_link(admin_user_path(@user), label: t('delete'))
      .user
        .attribute.username.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:username)
          .attribute-value.col.s12.m9= user_presenter.username
        .attribute.email.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:email)
          .attribute-value.col.s12.m9
            = user_presenter.email
            = user_presenter.email_link
        .attribute.first-name.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:first_name)
          .attribute-value.col.s12.m9= user_presenter.first_name
        .attribute.last-name.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:last_name)
          .attribute-value.col.s12.m9= user_presenter.last_name
        .attribute.roles.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:roles)
          .attribute-value.col.s12.m9= user_presenter.roles
        .attribute.sign-in-count.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:sign_in_count)
          .attribute-value.col.s12.m9= user_presenter.sign_in_count
        .attribute.current-sign-in-at.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:current_sign_in_at)
          .attribute-value.col.s12.m9= user_presenter.current_sign_in_at
        .attribute.last-sign-in-at.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:last_sign_in_at)
          .attribute-value.col.s12.m9= user_presenter.last_sign_in_at
        .attribute.current-sign-in-ip.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:current_sign_in_ip)
          .attribute-value.col.s12.m9= user_presenter.current_sign_in_ip
        .attribute.last-sign-in-ip.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:last_sign_in_ip)
          .attribute-value.col.s12.m9= user_presenter.last_sign_in_ip
        .attribute.receive-newsletters.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:receive_newsletters)
          .attribute-value.col.s12.m9= user_presenter.receive_newsletters
        .attribute.receive-sign-up-alerts.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:receive_sign_up_alerts)
          .attribute-value.col.s12.m9= user_presenter.receive_sign_up_alerts
        .attribute.receive-contact-alerts.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:receive_contact_alerts)
          .attribute-value.col.s12.m9= user_presenter.receive_contact_alerts
        .attribute.created-at.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:created_at)
          .attribute-value.col.s12.m9= user_presenter.created_at
        .attribute.updated-at.row
          .attribute-name.col.s12.m3= User.human_attribute_name(:updated_at)
          .attribute-value.col.s12.m9= user_presenter.updated_at
