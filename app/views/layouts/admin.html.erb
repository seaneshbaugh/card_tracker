<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
  <meta charset="utf-8">
  <title><%= t('admin.title') %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="description" content="<%= t('admin.description') %>">
  <meta name="author" content="<%= t('admin.author') %>">
  <%= stylesheet_link_tag 'admin', :media => 'all' %>
  <%= javascript_include_tag 'admin' %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <link href="/favicon.ico" rel="shortcut icon">
  <link href="<%= image_path('apple-touch-icon-iphone.png') %>" rel="apple-touch-icon" sizes="57x57">
  <link href="<%= image_path('apple-touch-icon-ipad.png') %>" rel="apple-touch-icon" sizes="72x72">
  <link href="<%= image_path('apple-touch-icon-iphone-retina.png') %>" rel="apple-touch-icon" sizes="114x114">
  <link href="<%= image_path('apple-touch-icon-ipad-retina.png') %>" rel="apple-touch-icon" sizes="144x144">
  <link href="/humans.txt" rel="author">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t('admin.title'), admin_root_path, :class => 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if can? :read, CardBlock %><li class="card-block-nav-link"><%= link_to t('navigation.card_blocks'), admin_card_blocks_path, :class => is_active_controller?('admin/card_blocks') %></li><% end %>
          <% if can? :read, CardSet %><li class="card-set-nav-link"><%= link_to t('navigation.card_sets'), admin_card_sets_path, :class => is_active_controller?('admin/card_sets') %></li><% end %>
          <% if can? :read, Card %><li class="card-nav-link"><%= link_to t('navigation.cards'), admin_cards_path, :class => is_active_controller?('admin/cards') %></li><% end %>
          <% if can? :read, CardBlockType %><li class="card-block-type-nav-link"><%= link_to t('navigation.card_block_types'), admin_card_block_types_path, :class => is_active_controller?('admin/card_block_types') %></li><% end %>
          <% if can? :read, User %><li class="user-nav-link"><%= link_to t('navigation.users'), admin_users_path, :class => is_active_controller?('admin/users') %></li><% end %>
          <li class="site-home-nav-link"><%= link_to t('navigation.site_home'), root_path %></li>
          <li class="logout-nav-link visible-xs"><%= link_to ('<span class="glyphicon glyphicon-log-out"></span> ' + t('navigation.sign_out')).html_safe, destroy_user_session_path, :method => :delete %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right hidden-xs">
          <li class="logout-nav-link"><%= link_to ('<span class="glyphicon glyphicon-hand-left"></span> ' + t('navigation.sign_out')).html_safe, destroy_user_session_path, :method => :delete %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <%= flash_messages %>
    <%= yield %>
  </div>
  <footer>
    <div class="container">
      <p class="text-muted"><%= t('admin.footer').html_safe %></p>
    </div>
  </footer>
</body>
</html>
