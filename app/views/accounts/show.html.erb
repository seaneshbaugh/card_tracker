<% content_for :body_class, 'account' %>
<div class="page-header">
  <h1>Your Account</h1>
</div>
<% present @account do |user_presenter| %>
  <div id="account" class="page row">
    <div class="page-body col-xs-12">
      <div class="table-responsive">
        <table class="table table-striped table-condensed">
          <tbody>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.username') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.username %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.email') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.email %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.first_name') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.first_name %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.last_name') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.last_name %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.sign_in_count') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.sign_in_count %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.current_sign_in_at') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.current_sign_in_at %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.last_sign_in_at') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.last_sign_in_at %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.current_sign_in_ip') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.current_sign_in_ip %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.last_sign_in_ip') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.last_sign_in_ip %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.receive_newsletters') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.receive_newsletters %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.created_at') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.created_at %></td>
            </tr>
            <tr>
              <th class="col-xs-4 col-sm-2"><%= t('activerecord.attributes.user.updated_at') %></th>
              <td class="col-xs-8 col-sm-10"><%= user_presenter.updated_at %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
