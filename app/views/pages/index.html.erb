<% content_for :masthead do %>
  <div class="jumbotron masthead">
    <h1>The Caves of Koilos</h1>
    <p class="lead">Keep track of your Magic: The Gathering card collection.</p>
  </div>
<% end %>
<div id="front-page">
  <div class="row">
    <div class="login span6">
      <h2>Sign In</h2>
      <%= simple_form_for @new_user, :as => :user, :url => session_path(:user), :html => { :class => 'form-horizontal' } do |f| %>
        <fieldset>
          <%= f.input :username, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember_me, :as => :boolean %>
        </fieldset>
        <div class="form-actions">
          <%= f.button :submit, t('navigation.sign_in'), :class => 'btn-primary' %>
        </div>
      <% end %>
    </div>
    <div class="register span6">
      <h2>Register</h2>
      <%= simple_form_for @new_user, :as => :user, :url => registration_path(:user), :html => { :class => 'form-horizontal' } do |f| %>
        <fieldset>
          <%= f.input :username %>
          <%= f.input :email %>
          <%= f.input :password, :required => true %>
          <%= f.input :password_confirmation, :required => true %>
          <div class="form-actions">
            <%= f.button :submit, t('navigation.register'), :class => 'btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
