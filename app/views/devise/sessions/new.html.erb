<div class="page-header">
  <h1><%= t('navigation.sign_in') %></h1>
</div>
<div id="login" class="page row">
  <div class="page-body col-xs-12">
    <%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.input :username, :autofocus => true, :required => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :remember_me, :as => :boolean, :label => 'Remember Me', :required => false, :wrapper => :bootstrap3_horizontal_checkbox %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.button :submit, t('navigation.sign_in'), :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
