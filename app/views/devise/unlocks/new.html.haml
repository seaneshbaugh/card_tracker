- content_for :page_title, t('.title')
- content_for :body_class, 'resend-unlock'
.page-resend-unlock.page
  %header.page-header
    %h1= t('.title')
  .page-body
    = form_for resource, as: resource_name, url: unlock_path(resource_name) do |f|
      .row
        .input-field.col.s12
          = f.email_input :email, autocomplee: 'email', autofocus: true, required: true
          = f.label :email
      .row
        .input-field.col.s12
          = f.button :submit, t('.submit'), class: success_button_class
    = render 'devise/shared/links'
