<div id="resend-confirmation">
  <h1><%= t('devise.confirmations.resend') %></h1>
  <%= simple_form_for resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' } do |f| %>
    <fieldset>
      <%= f.input :email, :autofocus => true, :required => true %>
    </fieldset>
    <div class="form-actions">
      <%= f.button :submit, t('devise.confirmations.resend'), :class => 'btn-primary' %>
    </div>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>
