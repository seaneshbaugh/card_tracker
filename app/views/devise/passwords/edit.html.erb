<div class="page-header">
  <h1><%= t('devise.passwords.update_your_password') %></h1>
</div>
<div id="reset-password" class="page row">
  <div class="page-body col-xs-12">
    <%= simple_form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' } do |f| %>
      <%= f.input :reset_password_token, :as => :hidden %>
      <%= f.full_error :reset_password_token %>
      <%= f.input :password, :autofocus => true, :label => t('devise.passwords.new_password'), :required => true %>
      <%= f.input :password_confirmation, :label => t('devise.passwords.confirm_password'), :required => true %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.button :submit, t('devise.passwords.edit_button'), :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
