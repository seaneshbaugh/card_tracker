<div class="page-header">
  <h1><%= t('devise.passwords.forgot_your_password') %></h1>
</div>
<div id="forgot-password" class="page row">
  <div class="page-body col-xs-12">
    <%= simple_form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.input :email, :autofocus => true, :required => true %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.button :submit, t('devise.passwords.new_button'), :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
