<div class="page-header">
  <h1><%= t('navigation.register') %></h1>
</div>
<div id="register" class="page row">
  <div class="page-body col-xs-12">
    <%= simple_form_for resource, :as => resource_name, :url => user_registration_path, :html => { :autocomplete => 'off', :class => 'form-horizontal', :honeypot => true } do |f| %>
      <%= f.input :username, :autofocus => true, :required => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :label => 'Repeat Password', :required => true %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.button :submit, t('navigation.register'), :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
