<div id="register">
  <h1><%= t('navigation.register') %></h1>
  <%= simple_form_for resource, :as => resource_name, :url => user_registration_path, :html => { :autocomplete => 'off', :class => 'form-horizontal', :honeypot => true } do |f| %>
    <fieldset>
      <%= f.input :username, :autofocus => true, :required => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <div class="form-actions">
        <%= f.button :submit, t('navigation.register'), :class => 'btn-primary' %>
      </div>
    </fieldset>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>
